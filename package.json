{
  "name": "@vue/eslint-config-typescript",
  "version": "14.6.0",
  "description": "ESLint config for TypeScript + Vue.js projects",
  "main": "./dist/index.mjs",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
    "dev": "pkgroll --watch",
    "build": "pkgroll",
    "format": "prettier --write src",
    "type-check": "tsc --noEmit",
    "test": "pkgroll && vitest --dir test --testTimeout 30000",
    "prepublishOnly": "pkgroll --clean-dist"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vuejs/eslint-config-typescript.git"
  },
  "keywords": [
    "vue",
    "create-vue",
    "create-eslint-config",
    "eslint",
    "typescript"
  ],
  "author": "Evan You",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vuejs/eslint-config-typescript/issues"
  },
  "homepage": "https://github.com/vuejs/eslint-config-typescript#readme",
  "devDependencies": {
    "@tsconfig/node24": "^24.0.0",
    "@types/node": "^22.19.11",
    "eslint": "^9.39.2",
    "eslint-plugin-vue": "~10.8.0",
    "execa": "^9.6.1",
    "pkgroll": "^2.25.2",
    "prettier": "3.7.4",
    "tsx": "^4.21.0",
    "typescript": "~5.9.0",
    "vitest": "^4.0.18",
    "vue": "^3.5.28"
  },
  "peerDependencies": {
    "eslint": "^9.10.0",
    "eslint-plugin-vue": "^9.28.0 || ^10.0.0",
    "typescript": ">=4.8.4"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "dependencies": {
    "@typescript-eslint/utils": "^8.55.0",
    "fast-glob": "^3.3.3",
    "typescript-eslint": "^8.55.0",
    "vue-eslint-parser": "^10.4.0"
  },
  "engines": {
    "node": "^18.18.0 || ^20.9.0 || >=21.1.0"
  }
}
